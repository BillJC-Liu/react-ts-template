{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "charset": "utf-8",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2016",
      "dom",
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "bundle",
    "scripts",
  ],
  "include": [
    "./src/**/*"
  ]
}